{
  "css.validate": false,
  "less.validate": false,
  "npm.scriptExplorerExclude": ["^((?!watch|generate:watch).)*$"],
  "scss.validate": false,
  "typescript.tsdk": "node_modules/typescript/lib",
  "eslint.workingDirectories": [
    {
      "pattern": "./{packages,apps}/*"
    }
  ],
  "files.associations": {
    ".microrc": "jsonc",
    ".microrc.example": "jsonc",
    ".microrc.development": "jsonc"
  },
  "tailwindCSS.experimental.classRegex": [
    ["classNames\\(([^)]*)\\)", "'([^']*)'", "\"([^']*)\""],
    [":\\s*?[\"'`]([^\"'`]*).*?,"],
    ["baseStyle.=.[\"'`]([^\"'`]*)"],
    // Enum = 'value'
    ["[A-Z][a-z]+ = ['\"]([^\"'`]*)"],
    // const style = 'value'
    // const someStyle = 'value'
    ["const [a-zA-Z]+tyle = ['\"`]([^\"`'`]*)"],
    // const classes = 'value'
    // const class = 'value'
    // const selectedClass = 'value'
    ["const [a-zA-Z]+s = ['\"`]([^\"`'`]*)"]
  ],
  "yaml.schemas": {
    "https://json.schemastore.org/github-workflow.json": "file:///home/ryan/projects/micro/.github/workflows/build.yaml"
  }
}
